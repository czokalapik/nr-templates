<template>
  <setting id="titleBackgroundGraphics" label="Title Background Graphics" type="checkbox" default="true" />
  <setting id="cardBackgroundGraphics" label="Card Background Graphics" type="checkbox" default="true" />
  <units dedupe="true" exclude-primary-categories="configuration,army composition,reference">
    <div class="avoid-page-break" style="font-weight: 500; margin-bottom: 32px; padding: 2%" type="card" catalogue="{{catalogue}}">
      <div class="card" style="padding-bottom: 1px">
        <if field="settings.cardBackgroundGraphics.state" type="equals" value="true">
          <append-attribute name="class" value="bg" />
        </if>
        <div class="card-header">
          <entries>
            <if type="has-profile" value="model,unit,stats">
              <profiles include="model,unit,stats" recursive="false">
              <div class="statWheel" style="z-index:1">
                <div class="statWheelStats">
                <characteristics>
                  <div class="statwheelEntry">
                    <div class="statLabel">{{name}}</div>
                    <div class="stat">
                      {{$text}}
                    </div>
                  </div>
                </characteristics>
                </div>
              </div>
              </profiles>
              <div class="titleWrap">
                <div class="titleCard">
                  <div class="title">{{name}}</div>
                </div>
              </div>
            </if>
          </entries>
        </div>
        <!--body-->
        <table cellspacing="0" class="weapons-table">
          <thead style="color: white">
            <profiles include="ranged weapon" max="1">
              <tr style="background-color: var(--primary-color, cadetblue);">
                <td>Ranged Weapons</td>
                <characteristics>
                  <td>{{name}}</td>
                </characteristics>
              </tr>
            </profiles>
          </thead>
          <tbody>
            <profiles include="ranged weapon">
              <tr>
                <td><span>{{name}}</span></td>
                <characteristics include="rng,atk,hit,wnd,rnd,dmg,ability">
                  <td>
                    <span type="markdown">{{$text}}</span>
                  </td>
                </characteristics>
              </tr>
            </profiles>
          </tbody>
          <thead style="color: white">
            <profiles include="melee weapon" max="1">
              <tr style="background-color: var(--primary-color, cadetblue);">
                <td>Melee Weapons</td>
                <td class="placeholder"/>
                <characteristics>
                  <td>{{name}}</td>
                </characteristics>
              </tr>
            </profiles>
          </thead>
          <tbody>
            <profiles include="melee weapon">
              <tr>
                <td><span>{{name}}</span></td>
                <td class="placeholder"/>

                <characteristics include="atk,hit,wnd,rnd,dmg,ability">
                  <td>
                    <span type="markdown">{{$text}}</span>
                  </td>
                </characteristics>
              </tr>
            </profiles>
          </tbody>
        </table>
        <div class="hide-if-empty ability-section">
          <profiles include="ability (passive),ability (activated),ability (command),ability (spell), ability (prayer)" split="">
            <div class="ability-box">
              <characteristics include="casting value">
                <div class="cast icon">
                  <img src="https://raw.githubusercontent.com/BSData/age-of-sigmar-4th/main/images/casting.png" alt="" />
                  <div>{{$text}}</div>
                </div>

              </characteristics>
              <characteristics include="chanting value">
                <div class="chant icon">
                  <img src="https://raw.githubusercontent.com/BSData/age-of-sigmar-4th/main/images/chanting.png" alt="" />
                  <div>{{$text}}</div>
                </div>
              </characteristics>

              <characteristics include="cost">
                <div class="command icon">
                  <img src="https://raw.githubusercontent.com/BSData/age-of-sigmar-4th/main/images/command.png" alt="" />
                  <div>{{$text}}</div>
                </div>

              </characteristics>
              <characteristics include="timing">
                <if field="$text">
                  <set-attribute name="timing" value="{{$text}}" in=".ability-box"/>
                </if>
                <div class="header" style="color: white; padding: 3px 10px;">
                  <if field="settings.titleBackgroundGraphics.state" type="equals" value="true">
                    <append-attribute name="class" value="bg"/>
                  </if>
                  <span type="markdown">{{$text}}</span>
                </div>
              </characteristics>
              <if type="equals" field="typeName" value="Ability (Passive)">
                  <characteristics include="effect">
                  <if field="$text">
                    <set-attribute name="timing" value="{{$text}}" in=".ability-box"/>
                  </if>
                  </characteristics>

                <div class="header passive" style="color: white; padding: 3px 10px;" timing="Passive">
                  <if field="settings.titleBackgroundGraphics.state" type="equals" value="true">
                    <append-attribute name="class" value="bg"/>
                  </if>
                  <span>Passive</span>
                </div>
              </if>
              <div style="border: 1px solid black; border-top: none; margin: 0px 5px;">
                <div style="padding: 2px 8px;">
                  <div style="text-transform: uppercase;">
                    <strong>{{name}}</strong>
                  </div>
                  <characteristics include="declare,used by,effect">
                  <if field="$text">
                    <div>
                      <span><strong>{{name}}</strong>: </span><span type="markdown">{{$text}}</span>
                    </div>
                  </if>
                  </characteristics>
                </div>
                <characteristics include="keywords">
                  <if field="$text">
                    <div style="border-top: 1px solid black;">
                      <span class="header" style="width:10%; color: white; padding-left: 10px; padding-right: 10px;">
                        Keywords
                      </span>
                      <span >
                        <span type="markdown" style="padding-left: 10px;">{{$text}}</span>
                      </span>
                    </div>
                  </if>
                </characteristics>
              </div>
            </div>
          </profiles>
        </div>
        <div class="keyword-box">
          <div style="margin:0; color:white; background: var(--primary-color, cadetblue); padding:10px; display:inline;">KEYWORDS</div>
          <div class="keywords">
            <secondaries>
              <if field="name" type="not-match" value="Regimental Leader">
                <span type="markdown" class="split"
                  style="font-size: 1em; font-weight: 800; white-space: nowrap;">{{name}}<if field="last" type="not">,
                  </if></span>

              </if>
            </secondaries>
          </div>
        </div>
      </div>
    </div>
  </units>
</template>
