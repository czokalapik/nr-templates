.weapons-table {
  td, td {
    border: 1px solid var(--primary-color, cadetblue);
  }
    
  td:has(+.placeholder) {
    border-right: none;
  }
  td:first-child {
    border-left: none;
  }
      
  td:last-child {
    border-right: none;
  }

  td.placeholder {
    border-left: none;
    border-right: none;
  }
        
